# Use the official lightweight Python image for ARM architecture
FROM arm32v7/python:3.8-slim

# Set the working directory in the container
WORKDIR /app

# Copy the current directory contents into the container at /app
COPY . /app

# Install necessary build dependencies
RUN apt-get update && apt-get install -y \
    gfortran \
    libopenblas-dev \
    liblapack-dev \
    && rm -rf /var/lib/apt/lists/*

# Install any other needed dependencies specified in requirements.txt
RUN pip install --no-cache-dir numpy flask pandas scikit-learn

# Make port 5005 available to the world outside this container
EXPOSE 5005

# Run app.py when the container launches
CMD ["python", "app.py"]
